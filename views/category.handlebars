<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>frank.{{category}}</title>

    <!-- jQuery -->
    <script src="/js/jquery.js"></script>

    <!-- Boostrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <script src="/js/bootstrap.min.js"></script>
    
    <!-- Global CSS -->
    <link href="/css/global.css" rel="stylesheet">
    <!-- Page Specific CSS -->
    <link href="/css/category.css" rel="stylesheet">

    <!-- Global JS -->
    <script src="/js/global.js"></script>
    <!-- Vote JS -->
    <script src="/js/vote.js"></script>
</head>

<body>

    {{> nav}}

    <div class="module">
        <div class="row">
            {{#each posts}}
                <div class="col-xs-12 col-min-padding">
                    <div class="post-frame">
                        <a href="/pages/{{../category}}/hash/{{title}}">
                            <img src="{{img-src}}" class="post-picture" alt="{{title}}">
                        </a>
                        <div class="title-description">
                            <div>{{truncate title 140}}</div>
                            <div class="score unvoted align-right">
                                <span class="arrow up"><i class="glyphicon glyphicon-arrow-up"></i></span>
                                <span class="score upvote">{{upvotes}}</span>
                                <span class="arrow down"><i class="glyphicon glyphicon-arrow-down"></i></span>
                                <span class="score downvote">{{downvotes}}</span>
                            </div>
                        </div>
                        <div class="category">
                            {{capitalizeAll ../category}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

</body>

</html>
